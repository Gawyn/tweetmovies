source 'https://rubygems.org'

# Rails
gem 'rails', '3.2.8'

# Frontend
gem 'jquery-rails'

group :development, :production do
  gem 'mysql2'
  gem 'quiet_assets'
end

group :test do
  gem 'sqlite3'
end

# Assets
group :assets do
  gem 'sass-rails',   '~> 3.2.3'
  gem 'coffee-rails', '~> 3.2.1'
  gem 'uglifier', '>= 1.0.3'
end
